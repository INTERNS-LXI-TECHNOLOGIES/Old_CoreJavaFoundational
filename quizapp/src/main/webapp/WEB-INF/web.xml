<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <filter>
    <filter-name>RegisterFilter</filter-name>
    <filter-class>com.lxisoft.quizapp.filters.QuizRegisterFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>RegisterFilter</filter-name>
    <url-pattern>/register</url-pattern>
  </filter-mapping>


  <!-- Handle Register/Login/Logout Requests -->

    <servlet>
      <servlet-name>RegisterRequestPost</servlet-name>
      <servlet-class>com.lxisoft.quizapp.services.QuizRegisterService</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterRequestPost</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

     <servlet>
      <servlet-name>LoginRequestPost</servlet-name>
      <servlet-class>com.lxisoft.quizapp.services.QuizAuthService</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginRequestPost</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

      <servlet>
      <servlet-name>LogoutRequestPost</servlet-name>
      <servlet-class>com.lxisoft.quizapp.services.QuizLogoutService</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutRequestPost</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

  <!-- End -->

    <!-- Handle Home Requests -->

    <servlet>
      <servlet-name>HomeRequestGet</servlet-name>
      <servlet-class>com.lxisoft.quizapp.services.QuizMainService</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HomeRequestGet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

  <!-- End -->


  <!--Question / Answer Sumittion requests -->
  
    <servlet>
        <servlet-name>QuestionRequestGet</servlet-name>
      <servlet-class>com.lxisoft.quizapp.services.QuizQuestionService</servlet-class>
    </servlet>

    <servlet-mapping>
            <servlet-name>QuestionRequestGet</servlet-name>
        <url-pattern>/question</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AnswerRequestGet</servlet-name>
      <servlet-class>com.lxisoft.quizapp.services.QuizAnswerService</servlet-class>
    </servlet>

    <servlet-mapping>
            <servlet-name>AnswerRequestGet</servlet-name>
        <url-pattern>/answer</url-pattern>
    </servlet-mapping>

  <!--End-->

</web-app>
